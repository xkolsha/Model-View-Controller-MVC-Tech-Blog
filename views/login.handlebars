<div class="container auth-container">
  <div class="auth-section">
    <h1 class="afs-1 fw-bold text-success mb-5">Join Us: Log In or Create An
      Account</h1>

    <div class="auth-form-wrapper">
      <h2>Login</h2>
      <form id="login-form" class="auth-form">
        <input
          class="auth-input"
          type="text"
          id="username-login"
          name="username"
          placeholder="Username"
        />
        <input
          class="auth-input"
          type="password"
          id="password-login"
          name="password"
          placeholder="Password"
        />
        <button class="btn btn-success btn-lg" type="submit">Login</button>
      </form>
    </div>

    <div class="auth-form-wrapper">
      <h2>Signup</h2>
      <form id="signup-form" class="auth-form">
        <input
          class="auth-input"
          type="text"
          id="username-signup"
          name="username"
          placeholder="Username"
        />
        <input
          class="auth-input"
          type="password"
          id="password-signup"
          name="password"
          placeholder="Password"
        />
        <button class="btn btn-success btn-lg" type="submit">Signup</button>
      </form>
    </div>
  </div>
</div>