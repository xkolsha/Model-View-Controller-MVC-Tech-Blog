<!-- dashboard.handlebars -->
<div class="container">
  <h1>Your Dashboard</h1>
  <button id="new-post-button">Create New Post</button>

  <!-- Loop through the user's posts -->
  {{#each posts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <button class="edit-post-button" data-id="{{this.id}}">Edit</button>
      <button class="delete-post-button" data-id="{{this.id}}">Delete</button>
    </div>
  {{/each}}
</div>