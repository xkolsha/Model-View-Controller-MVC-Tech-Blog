<!-- Form for Editing a Post (Initially Hidden) -->
<div
  class="card mb-4 bg-primary-subtle"
  id="edit-form-container"
  style="display: none;"
>
  <div class="card-header">
    <h3 class="text-primary">Edit Post</h3>
  </div>
  <div class="card-body">
    <form id="edit-post-form">
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          id="new-post-title"
          placeholder="Enter Title"
        />
      </div>
      <div class="form-group">
        <textarea
          class="form-control"
          id="new-post-content"
          rows="3"
          placeholder="Enter Content"
        ></textarea>
      </div>
      <button
        type="button"
        id="save-btn"
        class="btn btn-primary mt-3"
        data-id="{{post.id}}"
      >Save</button>
    </form>
  </div>
</div>