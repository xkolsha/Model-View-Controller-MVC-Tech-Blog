<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <!-- Single Post -->
      <div class="card mb-4">
        <div class="card-header">
          <h3 class="card-title">{{post.title}}</h3>
          <small>Posted by: {{post.user.username}}</small>
        </div>
        <div class="card-body">
          <p class="card-text">{{post.content}}</p>
        </div>
      </div>

      <!-- Comments -->
      <h4>Comments</h4>
      {{#each post.comments}}
        <div class="card mb-2">
          <div class="card-body">
            <h5 class="card-title">{{this.user.username}} says:</h5>
            <p class="card-text">{{this.comment_text}}</p>
          </div>
        </div>
      {{/each}}

      <!-- Add Comment -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add a Comment</h5>
          <form id="add-comment-form">
            <div class="form-group">
              <textarea
                class="form-control"
                id="comment_text"
                rows="3"
                placeholder="Your comment"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>