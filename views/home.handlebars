<!-- home.handlebars -->
<div class="container">
  <h1>{{pageTitle}}</h1>
  <p>Welcome to the Tech Blog Home Page!</p>

  <!-- Section for Existing Blog Posts -->
  <section id="blog-posts">
    <!-- Loop through all blog posts -->
    {{#each posts}}
      <div class="post">
        <h2>{{this.title}}</h2>
        <!-- Show only a short preview of the content -->
        <p>{{trimText this.content 100}}...</p>
        <!-- Show the count of comments -->
        <p>Comments: {{this.commentsCount}}</p>
        <a href="/post/{{this.id}}">Read More</a>
      </div>
    {{/each}}
  </section>
</div>