<!-- Home Page Template -->
<div class="container">
  <h1>{{pageTitle}}</h1>
  <p>Welcome to the Tech Blog Home Page!</p>

  <!-- Section for Existing Blog Posts -->
  <section id="blog-posts">
    {{#each posts as |post|}}
      <article>
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <small>Posted by {{post.author}} on {{post.date}}</small>
      </article>
    {{/each}}
  </section>
</div>