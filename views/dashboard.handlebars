<div class="container">
  <h1>Your Posts</h1>

  <form id="new-post-form">
    <input type="text" name="title" placeholder="Title" />
    <textarea name="content" placeholder="Content"></textarea>
    <button type="submit">Add Post</button>
  </form>

  {{#each userPosts}}
    <div class="post">
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
    </div>
  {{/each}}
</div>